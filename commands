####PINGACCESS####
echo "Creating output folder..."
mkdir out

echo "Downloading config from https://localhost:9000..."
curl -X GET --basic -u Administrator:2FederateM0re \
  --header 'Content-Type: application/json' \
  --header 'X-XSRF-Header: PingAccess' \
  "https://pingaccess-admin-${PING_IDENTITY_DEVOPS_DNS_ZONE}/pa-admin-api/v3/config/export" \
  --insecure > pa-export.json



###PINGFEDERATE###

curl -X GET --basic -u Administrator:2FederateM0re \
  --header 'Content-Type: application/json' \
  --header 'X-XSRF-Header: PingFederate' \
  "https://pingfederate-admin-${PING_IDENTITY_DEVOPS_DNS_ZONE}/pf-admin-api/v1/bulk/export" \
  --insecure | jq -r '.' - | dev/pf-export.json 


java -jar ping-bulkexport-tools-0.0.1-SNAPSHOT-jar-with-dependencies.jar \
  ./dev/pf-config.json \
  ./dev/pf-export.json  \
  ./dev/pf.env \
  ./dev/data.json.subst \
  > dev/pf-k8-export-convert.log